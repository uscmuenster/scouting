name: 🏐 Extract PDF Stats (PyPDF2)

on:
  workflow_dispatch:
  schedule:
    - cron: "15 5 * * *"

permissions:
  contents: write

jobs:
  extract-pdfs:
    runs-on: ubuntu-latest

    steps:
      - name: 🧩 Checkout repository
        uses: actions/checkout@v4

      - name: 🐍 Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.12"

      - name: 📦 Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install PyPDF2

      - name: ⚙️ Extract text from PDF reports
        working-directory: Scouting
        run: python scripts/pdf-extract-neu.py

      - name: 🪶 Commit and push extracted texts
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: "chore: update extracted PDF texts"
          file_pattern: "docs/data/stats_texts/*.txt"
          branch: main
